class Solution {
    public List<Integer> findPeaks(int[] mountain) {
        List<Integer> integers = new ArrayList<>();
        int len = mountain.length;
        if(len <= 2) return integers;
        for(int i = 1; i < len - 1; i++) {
            if(mountain[i - 1] < mountain[i] && mountain[i] > mountain[i + 1]) {
                integers.add(i);
            }
        }
        return integers;
    }
}
