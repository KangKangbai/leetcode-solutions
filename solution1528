class Solution {
    public String restoreString(String s, int[] indices) {
        char[] charArray = s.toCharArray();
        int len = s.length();
        char[] res = new char[len];
        for(int i = 0; i < len; i++) {
            res[indices[i]] = charArray[i];
        }
        return new String(res);
    }
}
